{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2017",
		"lib": ["ES2017"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"incremental": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
