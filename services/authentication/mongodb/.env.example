# Node environment: development | production
NODE_ENV=development
# Port the auth service listens on
PORT=5010

# MongoDB
# Connection URI for MongoDB
MONGO_URI=mongodb://localhost:27017
# Database name used by MongooseModule
AUTH_DB_NAME=auth_db

# Redis Cache
# Used by CacheModule with KeyvRedis
REDIS_URL=redis://localhost:6379

# JWT (RSA) for AuthenticationModule
JWT_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----dummy-----END PRIVATE KEY-----
JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----dummy-----END PUBLIC KEY-----
# Token expiry (e.g., '1d', '12h', '3600s')
JWT_EXPIRATION=1d

JWT_REFRESH_EXPIRATION=7d

# UserModule registers JwtModule with a shared secret (HS256 style)
JWT_SECRET=dev-secret-key
