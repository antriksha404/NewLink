{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2017",
		"lib": ["ES2017", "DOM"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declaration": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*", "auth.module.ts"],
	"exclude": ["node_modules"]
}
