# ==================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password
DB_NAME=auth_db

# Auto-sync database schema with entities (WARNING: Set to false in production!)
# When true, TypeORM will automatically create/update tables based on entities
DB_SYNCHRONIZE=true

# Enable database query logging (helpful for debugging)
DB_LOGGING=true

# ==================================
# JWT CONFIGURATION
# ==================================
# Generate RSA key pairs using:
# openssl genrsa -out private.pem 2048
# openssl rsa -in private.pem -outform PEM -pubout -out public.pem

# RSA Private Key (RS256 algorithm)
# Replace with your actual private key content
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEvQIBADANBgkqhkiG9w0BAQEFAASCBKcwggSjAgEAAoIBAQC7VJTUt9Us8cKj\nMzEfYyjiWA4R4/M2bS1+fWIcPm15A8vMdLrJXN2aeYC0Qm1cBjWvN0+SV3dJLcC6\n...\n-----END PRIVATE KEY-----"

# RSA Public Key (RS256 algorithm)
# Replace with your actual public key content
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nMIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgKCAQEAu1SU1LfVLPHCozMxH2Mo\n4lgOEePzNm0tfn1iHD5teQPLzHS6yVzdmnmAtEJtXAY1rzdPkld3SS3Aujw==\n-----END PUBLIC KEY-----"

# Access token expiration time
# Examples: 15m, 1h, 1d, 7d
JWT_EXPIRATION=1d

# Refresh token expiration time
# Should be longer than access token
JWT_REFRESH_EXPIRATION=7d

# ==================================
# REDIS CONFIGURATION
# ==================================
# Redis URL for caching OTP and session data
# Format: redis://[username:password@]host:port[/database]
REDIS_URL=redis://localhost:6379

# With authentication:
# REDIS_URL=redis://username:password@localhost:6379

# ==================================
# APPLICATION CONFIGURATION
# ==================================
# Server port
PORT=3000

# Environment mode
# Options: development, production, test
NODE_ENV=development

# ==================================
# OPTIONAL: AUTHENTICATION SETTINGS
# ==================================
# Default database name for auth service (if using multiple databases)
AUTH_DB_NAME=auth_db
