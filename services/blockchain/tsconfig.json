{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "hedera/*": ["src/hedera/*"],
      "blockchain.type": ["src/blockchain.type.ts"],
      "dto": ["src/dto/index.ts"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false
  }
}
